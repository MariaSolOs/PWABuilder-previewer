{
  "compilerOptions": {
    "target": "es2019",
    "module": "es2015",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["es2019", "dom"],
    "strict": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "outDir": "build",
    "sourceMap": true,
    "inlineSources": true,
    "rootDir": "src",
    "incremental": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["**/*.ts"]
}
